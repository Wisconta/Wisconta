
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Главная страница</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button"class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("О сайте", "Default", "Default")</li>
                    <li>@Html.ActionLink("Список компаний", "Default", "Company")</li>
                    <li>@Html.ActionLink("Список сотрудников", "Default", "Staff")</li>
                    @if (User.IsInRole("Администратор"))
                    {
                        <li>@Html.ActionLink("Список аккаунтов", "Default", "Passport")</li>
                    }                   
                    <li>@Html.ActionLink("Выход", "Default", "Secure")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="jumbotron col-md-offset-2 col-lg-7">
        <br />
        <br />
        <p>
            <img class="img-responsive col-md-offset-0 col-lg-2 table-bordered" src="~/Images/MatyushevLeonid.jpeg" alt="Chania">
            <label class="col-md-offset-2 col-lg-4">
                Разработчик сайта:
            </label>
            Матюшев Леонид Борисович
        </p>
        <p>
            <label class="col-md-offset-2 col-lg-4">
                Телефон:
            </label>
            8 (985) 614-66-99
        </p>
        <p>
            <label class="col-md-offset-2 col-lg-4">
                E-mail:
            </label>
            wisconta@mail.ru
        </p>
        <p>
            <label class="col-md-offset-2 col-lg-4">
                Адрес:
            </label>
            109125, г. Москва, Волжский бв, 12-1
        </p>
        <p>
            <label class="col-md-offset-2 col-lg-4">
                Версия сайта:
            </label>
            1.0
        </p>
        <p>
            <label class="col-md-offset-2 col-lg-4">
                Дата последнего обновления:
            </label>
            22.11.2015 г.
        </p>
    </div>
    <div class="jumbotron col-md-offset-2 col-lg-7">
        <p>
            <label class="col-md-offset-1 col-lg-6">
                Вы зашли на сайт как:   "@User.Identity.Name"
            </label>           
        </p>
        <p>
            @if (User.IsInRole("Гость"))
            {
                <label class="col-md-offset-1 col-lg-7">
                    Ваша роль на сайте:  "Гость"

                    <label>
                        ВНИМАНИЕ!!! На данную роль накладываются ограничения,
                        некоторые функции будут недоступны!
                    </label>
                </label>              
            }
            @if (User.IsInRole("Сотрудник"))
            {
                <label class="col-md-offset-1 col-lg-7">
                    Ваша роль на сайте:  "Сотрудник"
                    <br />
                    <br />
                    <label>ВНИМАНИЕ!!! На данную роль накладываются ограничения,
                    некоторые функции будут недоступны!</label>
                </label>
            }
            @if (User.IsInRole("Администратор"))
            {
                <label class="col-md-offset-2 col-lg-4">
                    Ваша роль на сайте:  "Администратор"
                </label>
            }
        </p>
    </div>
</body>
</html>
