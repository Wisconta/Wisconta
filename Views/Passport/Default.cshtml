@model IEnumerable<MatyushevLeonid.Models.Passport>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Список аккаунтов</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("О сайте", "Default", "Default")</li>
                    <li>@Html.ActionLink("Список компаний", "Default", "Company")</li>
                    <li>@Html.ActionLink("Список сотрудников", "Default", "Staff")</li>
                    @if (User.IsInRole("Администратор"))
                    {
                        <li>@Html.ActionLink("Список аккаунтов", "Default", "Passport")</li>
                    }
                    <li>@Html.ActionLink("Выход", "Default", "Secure")</li>
                </ul>
            </div>
        </div>
    </div>
@if (Model != null)
{
    using (Html.BeginForm("ClickButtonList", "Passport", FormMethod.Post))
    {
        <div class="jumbotron">
            <p>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @if (User.IsInRole("Администратор"))
                        {
                            <input class="btn btn-primary" type="submit" name="create:-1" value="Создать" />
                        }
                        else
                        {
                            <input class="btn btn-primary" type="submit" name="create:-1" value="Создать" disabled="disabled" />
                        }
                    </div>
                </div>
            </p>
        </div>
        <div class="form-horizontal">
            <p>
                <table class="table col-md-offset-1 col-md-10">
                    <tr>
                        <th>
                            @Html.DisplayName("ФИО сотрудника:")
                        </th>
                        <th>
                            @Html.DisplayName("Роль сотрудника:")
                        </th>
                        <th>
                            @Html.DisplayName("Логин:")
                        </th>
                        <th>
                            @Html.DisplayName("Пароль:")
                        </th>
                    </tr>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(item => i.NameStaff)
                            </td>
                            <td>
                                @Html.DisplayFor(item => i.RoleStaff)
                            </td>
                            <td>
                                @Html.DisplayFor(item => i.LoginStaff)
                            </td>
                            <td>
                                @Html.DisplayFor(item => i.PasswordStaff)
                            </td>
                            <td>
                                @if (User.IsInRole("Администратор"))
                                {
                                    <input class="btn btn-default" type="submit" name="edit:@i.Id" value="Редактировать" />
                                    <input class="btn btn-warning" type="submit" name="delete:@i.Id" value="Удалить" />
                                }
                                else
                                {
                                    <input class="btn btn-default" type="submit" name="edit:@i.Id" value="Редактировать" disabled="disabled" />
                                    <input class="btn btn-warning" type="submit" name="delete:@i.Id" value="Удалить" disabled="disabled" />
                                }
                            </td>
                        </tr>
                    }
                </table>
            </p>
        </div>
    }
}
else
{
    <div class="jumbotron">
        <p>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <h3>
                        Аккаунты отсутствуют...
                    </h3>
                </div>
            </div>
    </div>
}
</body>
</html>

