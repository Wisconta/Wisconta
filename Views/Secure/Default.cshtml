@model MatyushevLeonid.Models.Passport

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Авторизация пользователя</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("SecureStatus", "Secure", FormMethod.Post))
    {
        <hr />
        <br />
        <div class="col-md-offset-4 col-lg-5" style="color: brown; margin-top: 150px">
            <h3>
                @ViewBag.erroreLogin
            </h3>
        </div>
        <div class="container col-md-offset-4 col-lg-3" style="margin-top: 10px" >
            <br />
            <br />
            <hr />
            <h2>Авторизация пользователя</h2>
            <br />
            <form role="form">
                <div class="form-group">
                    <label for="text">Логин:</label>
                    <input type="text" class="form-control" id="email" name="loginStaff" placeholder="Введите логин">
                </div>
                <div class="form-group">
                    <label for="password">Пароль:</label>
                    <input type="password" class="form-control" id="pwd" name="passwordStaff" placeholder="Введите пароль">
                </div>
                <br />
                <button type="submit" class="btn btn-success">Войти</button>
                <br />
                <br />
                <hr />
            </form>
        </div>
    }
</body>
</html>
